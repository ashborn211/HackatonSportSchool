{
  "compilerOptions": {
    "target": "ESNext",                     // Latest JS features
    "useDefineForClassFields": true,        // Recommended with React & Vite
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // DOM + modern JS features
    "allowJs": false,                        // Only TypeScript files
    "skipLibCheck": true,                    // Skip checking .d.ts files for speed
    "esModuleInterop": false,                
    "allowSyntheticDefaultImports": true,    
    "strict": true,                          // Enable all strict type checks
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",                      
    "moduleResolution": "Node",              
    "resolveJsonModule": true,               
    "isolatedModules": true,                 
    "noEmit": true,                          // Vite handles compilation
    "jsx": "react-jsx"                       // Supports .tsx JSX syntax
  },
  "include": ["src"]                         // Only type-check the src folder
}
